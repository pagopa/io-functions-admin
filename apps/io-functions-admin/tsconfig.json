{
  "$schema": "https://json.schemastore.org/tsconfig",
  // We extend it from here, asap!
  "extends": "@pagopa/typescript-config-node/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "__/mocks__/**"
  ],
}